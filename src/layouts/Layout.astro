---
export const prerender = false;
import "@fontsource-variable/roboto-condensed";
import Navbar from '../components/Navbar.astro';
import '@fontsource/lilita-one';



 // Asegura que sea SSR y tengas acceso a Astro.request
import { getUserFromSession } from '../utils/auth';
const user = await getUserFromSession(Astro);

---

<!doctype html>
<html lang="es" class="bg-secondary">
  <head>
    <meta
      name="description"
      content="Shifu Bot es un bot de Discord de control de turnos y breaks para equipos de trabajo."
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Shifu Bot</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Permanent+Marker&family=Roboto+Condensed&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Navbar user={user} />
    <div class="">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: "Roboto Condensed", sans-serif;
	font-size: 16px;
  }
  ,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
